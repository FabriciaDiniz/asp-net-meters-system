<Window x:Class="LandisDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LandisDesktopApp"
        mc:Ignorable="d"
        Title="Landis" Height="450" Width="800">

    <ListView ItemsSource="{Binding Meters}" PreviewMouseLeftButtonUp="Meter_Click">
        <ListView.View>
            <GridView ColumnHeaderToolTip="Meter information">
                <GridViewColumn DisplayMemberBinding="{Binding Id}"
                                Header="Id" Width="50" />
                <GridViewColumn DisplayMemberBinding="{Binding Cp}"
                                Header="CP" Width="50" />
                <GridViewColumn DisplayMemberBinding="{Binding IdCs}"
                                Header="CS" Width="50" />
                <GridViewColumn DisplayMemberBinding="{Binding TrafoId}"
                                Header="Trafo" Width="50" />
            </GridView>
        </ListView.View>
    </ListView>

</Window>