<Window x:Class="MetersDesktopApp.CreateNewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetersDesktopApp"
        mc:Ignorable="d"
        Title="Create new Meter" Height="450" Width="800">

    <StackPanel Orientation="Vertical" Margin="15"
                HorizontalAlignment="Left">
        <Label>CP</Label>
        <TextBox x:Name="cpTextBox" Width="50" 
                 HorizontalAlignment="Left" />
        <Label>CS</Label>
        <TextBox x:Name="csTextBox" Width="50" 
                 HorizontalAlignment="Left" />
        <Label>Trafo</Label>
        <TextBox x:Name="trafoTextBox" Width="50" 
                 HorizontalAlignment="Left" />
        <Button Content="Submit" Width="80" 
                HorizontalAlignment="Left" Margin="15"
                Click="Submit_Click"/>
    </StackPanel>

</Window>